<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- 电视设备特性 -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.faketouch"
        android:required="false" />

    <application
        android:name=".BiliGoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiliGo"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- 主活动 -->
        <activity
            android:name=".ui.screen.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BiliGo"
            android:screenOrientation="landscape"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 视频播放活动 -->
        <activity
            android:name=".ui.screen.video.VideoPlayerActivity"
            android:label="@string/video_player"
            android:theme="@style/Theme.BiliGo.Fullscreen"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        
        <!-- 搜索活动 -->
        <activity
            android:name=".ui.screen.search.SearchActivity"
            android:label="@string/search"
            android:theme="@style/Theme.BiliGo">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        
        <!-- Leanback搜索活动 -->
        <activity
            android:name=".ui.screen.leanback.LeanbackSearchActivity"
            android:label="@string/search"
            android:theme="@style/Theme.Leanback">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        
        <!-- 媒体会话服务 -->
        <service
            android:name=".service.MediaPlaybackService"
            android:exported="false"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>
        
        <!-- Leanback设置活动 -->
        <activity
            android:name=".ui.screen.settings.SettingsActivity"
            android:label="@string/settings"
            android:theme="@style/Theme.Leanback">
        </activity>
        
        <!-- 数据同步服务 -->
        <service
            android:name=".service.DataSyncService"
            android:exported="false">
        </service>
        
    </application>

</manifest>